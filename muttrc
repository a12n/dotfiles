# -*- mode: conf -*-

#
# Configuration Variables
#

set alias_file="~/mail/aliases"
set askcc=yes
set beep=no
set certificate_file="~/mail/certificates"
set date_format="%a, %d %b %Y %T %z"
set edit_headers=yes
set folder="imaps://mail.bestmx.ru/INBOX/"
set from="arn@bestmx.ru"
set header_cache="~/mail/cache"
set hide_missing=no
set hide_top_missing=no
set imap_check_subscribed=yes
set imap_idle=yes
set imap_user="$from"
set index_format="%Z%2e/%-2E %-43.43s %-28.28L"
set mail_check=60
set mailcap_path="~/.mailcap"
set mark_old=no
set markers=no
set mask=".*"
set message_cachedir="$header_cache"
set pager_index_lines=8
set pager_stop=yes
set postponed="=Drafts"
set realname="Anton Yabchinskiy"
set record="=Sent"
set resolve=no
set send_charset="us-ascii:utf-8"
set signature="~/mail/signature"
set sleep_time=0
set smtp_url="smtps://$imap_user@mail.bestmx.ru/"
set sort=threads
set spoolfile="="
set ssl_force_tls=yes
set tilde=yes
set timeout=30
set trash="=Trash"
set use_ipv6=no

#
# Commands
#

macro generic <Esc>1 ":set attribution=\"On %d, %n wrote:\"\n:set locale=\"C\"\n:set realname=\"Anton Yabchinskiy\"\n"
macro generic <Esc>2 ":set attribution=\"%d %n skribis:\"\n:set locale=\"eo.UTF-8\"\n:set realname=\"Anton Jabĉinskij\"\n"
macro generic <Esc>3 ":set attribution=\"%d %n писал{,а}:\"\n:set locale=\"ru_RU.UTF-8\"\n:set realname=\"Антон Ябчинский\"\n"

source "$alias_file"

#
# Mailing List Commands
